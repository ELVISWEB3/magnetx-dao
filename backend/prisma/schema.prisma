generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

// Generic submissions store (captures all forms)
model Submission {
  id         BigInt   @id @default(autoincrement())
  form_name  String
  payload    Json
  user_agent String?
  ip         String?
  created_at DateTime @default(now()) @db.Timestamptz(6)

  @@map("submissions")
}

// Typed table for the "apply" form fields (matching your HTML inputs)
model ApplySubmission {
  id             BigInt   @id @default(autoincrement())
  full_name      String?
  x_profile_link String?
  region         String?
  phone          String?
  niche          String?
  skills         String?
  other_skill    String?
  category       String?
  followers      String?
  reason         String?
  user_agent     String?
  ip             String?
  created_at     DateTime @default(now()) @db.Timestamptz(6)
  payload        Json?

  @@map("apply_submissions")
}
